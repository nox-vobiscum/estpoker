#!/usr/bin/env sh
set -e

# Prüfen, ob Node verfügbar ist
if ! command -v node >/dev/null 2>&1; then
  echo "[pre-commit] Node nicht gefunden – bitte Node installieren/ins PATH legen." >&2
  exit 1
fi

echo "[pre-commit] Checking templates for native title=\"...\" attributes…"
node scripts/check-no-title.js
